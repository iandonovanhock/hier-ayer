<%= render layout: "layouts/mainbar" do %>
  <div class="col-md-4 col-sm-4 col-xs-6"></div>
  <div class="col-md-4 col-sm-4 col-xs-6"></div>
  <div class="col-md-4 col-sm-4 col-xs-6">
    <div class="pull-right">
      <h4><%= link_to "follow ", user_follow_path(current_user, :friend_id => user.id), method: :post, remote: true%><%= @user.name.capitalize %>'s Profile <%=image_tag @user.avatar.url(:thumb), :class => "img-responsive img-circle"%></h4>
    </div>
  </div>
<% end %>

<%= render partial: "bigmap", locals: {user: @user} %>
<%= render partial: "minimap", locals: {user: @user} %>

<h3>Following:</h3>
<ul>
<% @user.friends.each do |friend| %>
  <li><%= link_to friend.name, user_path(friend) %></li>
<% end %>
</ul>


<h3>Followers:</h3>
<ul>
<% @user.followers.each do |friend| %>
  <li><%= link_to friend.name, user_path(friend) %></li>
<% end %>
</ul>

