<%= render layout: "layouts/mainbar" do %>
  <div class="col-md-4 col-sm-4 col-xs-6"></div>
  <div class="col-md-4 col-sm-4 col-xs-6"></div>
  <div class="col-md-4 col-sm-4 col-xs-6">
    <div class="pull-right">
      <h4><%= link_to "follow ", user_follow_path(current_user, :friend_id => user.id), method: :post, remote: true%><%= @user.name.capitalize %>'s Profile <%=image_tag @user.avatar.url(:thumb), :class => "img-responsive img-circle"%></h4>
    </div>
  </div>
<% end %>

<%= render partial: "bigmap", locals: {user: @user} %>
<%= render partial: "minimap", locals: {user: @user} %>

<div class="momentlist col-md-4" style="padding-left:5px;padding-right:5px">
  <div class="widget">
    <div class="widget-head br-lblue" data-toggle="collapse" data-target="#collapseExample">
      <h3 class= "pull-left"><i class= "fa fa-plus"></i> Following: </h3>
      <div class="clearfix"></div>
    </div>
    <div class="widget-body collapse" id="collapseExample" class= "side-bar">
      <ul class="list-unstyled">
      <% @user.friends.each do |friend| %>
      <%=image_tag friend.avatar.url(:thumb), :class => "img-responsive img-circle-frfo"%>
      <%= link_to friend.name, user_path(friend) %>
      <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="momentlist col-md-4" style="padding-left:5px;padding-right:5px">
  <div class="widget">
    <div class="widget-head br-lblue" data-toggle="collapse" data-target="#collapseExampleTwo">
      <h3 class= "pull-left"><i class= "fa fa-plus"></i> Followers:</h3>
      <div class="clearfix"></div>
    </div>
    <div class="widget-body collapse" id="collapseExampleTwo">
      <ul>
        <li>
          <% @user.followers.each do |friend| %>
          <%=image_tag friend.avatar.url(:thumb), :class => "img-responsive img-circle-frfo"%>
          <%= link_to friend.name, user_path(friend) %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>

